<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/boton07"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:onClick="clickNumber7"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/boton00"
        app:layout_constraintEnd_toEndOf="@+id/boton04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/boton08" />

    <Button
        android:id="@+id/boton08"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="clickNumber8"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/boton00"
        app:layout_constraintEnd_toEndOf="@+id/boton05"
        app:layout_constraintStart_toEndOf="@+id/boton07"
        app:layout_constraintTop_toBottomOf="@+id/boton05" />

    <Button
        android:id="@+id/boton09"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="clickNumber9"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/boton00"
        app:layout_constraintEnd_toEndOf="@+id/boton06"
        app:layout_constraintStart_toEndOf="@+id/boton08"
        app:layout_constraintTop_toTopOf="@+id/boton08" />

    <Button
        android:id="@+id/boton00"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="clickNumber0"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/boton09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boton07" />

    <Button
        android:id="@+id/botonBorrar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="clickCBorrar"
        android:text="C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/botonIgual"
        app:layout_constraintTop_toBottomOf="@+id/botonIgual" />

    <Button
        android:id="@+id/botonIgual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="clickResult"
        android:text="="
        app:layout_constraintBottom_toTopOf="@+id/botonBorrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/botonSumar"
        app:layout_constraintTop_toBottomOf="@+id/botonSumar" />

    <Button
        android:id="@+id/boton04"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="clickNumber4"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/boton07"
        app:layout_constraintEnd_toEndOf="@+id/boton01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/boton05" />

    <Button
        android:id="@+id/boton05"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:onClick="clickNumber5"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/boton08"
        app:layout_constraintEnd_toEndOf="@+id/boton02"
        app:layout_constraintStart_toEndOf="@+id/boton04"
        app:layout_constraintTop_toBottomOf="@+id/boton02" />

    <Button
        android:id="@+id/boton06"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="clickNumber6"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/boton09"
        app:layout_constraintEnd_toEndOf="@+id/boton03"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/boton05"
        app:layout_constraintTop_toTopOf="@+id/boton05" />

    <Button
        android:id="@+id/boton01"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:onClick="clickNumber1"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@+id/boton04"
        app:layout_constraintEnd_toStartOf="@+id/boton02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/boton02" />

    <Button
        android:id="@+id/boton02"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="clickNumber2"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@+id/boton05"
        app:layout_constraintEnd_toStartOf="@+id/boton03"
        app:layout_constraintStart_toEndOf="@+id/boton01"
        app:layout_constraintTop_toBottomOf="@+id/tFResultado" />

    <Button
        android:id="@+id/boton03"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:onClick="clickNumber3"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@+id/boton06"
        app:layout_constraintEnd_toStartOf="@+id/botonSumar"
        app:layout_constraintStart_toEndOf="@+id/boton02"
        app:layout_constraintTop_toTopOf="@+id/boton02" />

    <Button
        android:id="@+id/botonSumar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="clickPlus"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@+id/botonIgual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boton03"
        app:layout_constraintTop_toBottomOf="@+id/tFResultado" />

    <TextView
        android:id="@+id/tFResultado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="textStart"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/botonSumar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>